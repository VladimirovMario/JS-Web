<section id="create-facility-section">

    <h1 class="item">New Facility</h1>

    <main class="item padded align-center">

        <form class="layout left large" action="/facility/create" method="post">

            {{#if error}}
            <div class="error-box">
                {{#each error}}
                {{!-- If we have strings. We can use this --}}
                <p>{{this}}</p>
                {{/each}}
            </div>
            {{/if}}

            <div class="col aligned">              
                <label><span>Label </span><input type="text" name="label"></label>
                <label><span>Icon Url</span><input type="text" name="iconUrl"></label>
            </div>

            <div class="content pad-med align-center vertical">
                <div class="align-center">
                    <input class="action" type="submit" value="Create Facility">
                </div>
            </div>


        </form>
    </main>
</section>