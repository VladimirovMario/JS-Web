<section id="create-container">
    <div class="create-container-info">
        <h1>Create Blog</h1>
        <form action="/catalog/create" method="post" >
            <label>Title:</label>
            <input name="title" value="{{body.title}}" type="text" id="title">

            <label>Image:</label>
            <input name="imageUrl" value="{{body.imageUrl}}" type="text" id="image" placeholder="http://...">

            <label>Content:</label>
            <textarea id="content" name="content">{{body.content}}</textarea>

            <label>Blog Category:</label>
            <input name="blog" value="{{body.blog}}" type="text" id="category">

            <input type="submit" id="btn" value="POST">
        </form>
    </div>
</section>