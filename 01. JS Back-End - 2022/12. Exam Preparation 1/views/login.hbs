<section id="viewLogin">
    <h2>Login:</h2>
    <form id="formLogin" action="/auth/login" method="post">
        <label for="username">Email:</label>
        {{!-- <input type="text" id="username" name="username" placeholder="Enter your Username" value="{{body.username}}"> --}}
