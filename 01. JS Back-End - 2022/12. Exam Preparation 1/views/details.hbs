{{#if errors}}
<div>
    <div class="notification errorBox">
        {{#each errors}}
        <span>{{this}}</span>
        {{/each}}
    </div>
</div>
{{/if}}

<section id="viewhotelDetails">
    <h2>Details</h2>
    <div class="hotel-ticket">
        <div class="hotel-left">
            <img src="{{body.imageUrl}}" alt="imageUrl">
        </div>
        <div class="hotel-right">
            <div>
                <h3>{{body.name}}</h3>
            </div>
            <div>
                {{body.city}}
            </div>
            <p><span>Free rooms: {{body.freeRooms}}</span> </p>

            {{#if body.isOwner}}
            <a href="/hotel/{{body._id}}/edit" class="edit">Edit</a>
            <a href="/hotel/{{body._id}}/delete" class="remove">Delete</a>
            {{else}}
               {{#if body.isBooked}}
                 <p><span class="green">You already have booked a room</span> </p>
               {{else}}
            <a href="/hotel/{{body._id}}/book" class="book">Book</a>
               {{/if}}
            {{/if}}
        </div>

    </div>
</section>